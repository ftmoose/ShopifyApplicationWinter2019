<!DOCTYPE html>
<html>

<head>
    <meta charset="utf-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <title>Moose's Shopify Project</title>
    <meta name="viewport" content="width=device-width, initial-scale=1">

    <!-- Stylesheets -->
    <link href="https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-MCw98/SFnGE8fJT3GXwEOngsV7Zt27NXFoaoApmYm81iuXoPkFOJwJ8ERdknLPMO"
        crossorigin="anonymous">
    <!-- Javascripts -->
    <script src="https://code.jquery.com/jquery-3.3.1.slim.min.js" integrity="sha384-q8i/X+965DzO0rT7abK41JStQIAqVgRVzpbzo5smXKp4YfRvH+8abtTE1Pi6jizo"
        crossorigin="anonymous"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.3/umd/popper.min.js" integrity="sha384-ZMP7rVo3mIykV+2+9J3UJ46jBk0WLaUAdn689aCwoqbBJiSnjAK/l8WvCWPIPm49"
        crossorigin="anonymous"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/js/bootstrap.min.js" integrity="sha384-ChfqqxuZUCnJSK3+MXmPNIyE6ZbWh2IMqE241rYiqJxyMiZ6OW/JmZQ5stwEULTy"
        crossorigin="anonymous"></script>

</head>

<body>
    <div class="container">
        <!-- shop title and info -->
        <div class="row" style="margin-top: 2vh;">
            <div class="col-sm-12 col-md-6">
                <h1>
                    <%= shop.name %>
                </h1>
                <input type="text" style="visibility: hidden; position:absolute;" id="shopId" value="<%=shop._id%>">
                <h6>
                    <%= shop.info %>
                </h6>
            </div>
            <div class="col-sm-12 col-md-6">
                <div class="functions">
                    <button class="btn btn-success" data-toggle="modal" data-target="#addProductModal">Add Products</button>
                    <button class="btn btn-primary">View Previous Orders</button>
                    <button class="btn btn-danger" data-toggle="modal" data-target="#deleteshopModal">Delete shop</button>

                    <!-- add product modal -->
                    <div class="modal fade bd-example-modal-lg" id="addProductModal" tabindex="-1" role="dialog"
                        aria-hidden="true">
                        <div class="modal-dialog modal-lg">
                            <div class="modal-content">
                                <div class="modal-header">
                                    <h5>Create a new product.</h5>
                                </div>
                                <div class="modal-body ">
                                    <form>
                                        <div class="form-group">
                                            <label for="newProductName">Product Name</label>
                                            <input type="text" class="form-control" id="newProductName" placeholder="What's the name of this product?"
                                                name="name" required>
                                        </div>
                                        <div class="form-group">
                                            <label for="newProductPrice">Price</label>
                                            <div class="input-group">
                                                <div class="input-group-prepend">
                                                    <span class="input-group-text">$</span>
                                                </div>
                                                <input type="text" class="form-control" id="newProductPrice" placeholder="0.00" name="price" required>
                                            </div>
                                        </div>
                                        <input type="text" style="visibility: hidden; position:absolute;" id="newProductShop" value="<%=shop._id%>" name="shopId">
                                        <a class="btn btn-primary" id="createNewProductButton">Create Product</a>
                                    </form>
                                </div>
                            </div>
                        </div>
                    </div>

                    <!-- delete warning modal -->
                    <div class="modal fade" id="deleteshopModal" tabindex="-1" role="dialog" aria-hidden="true">
                        <div class="modal-dialog" role="document">
                            <div class="modal-content">
                                <div class="modal-header">
                                    <h5 class="modal-title">Are you sure you want to delete this shop?</h5>
                                </div>
                                <div class="modal-footer">
                                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                                    <form action="/api/delete-shop/<%=shop._id%>" method="POST">
                                        <button class="btn btn-danger" type="submit">Delete shop</button>
                                    </form>
                                </div>
                            </div>
                        </div>
                    </div>

                </div>
            </div>
        </div>

        <!-- Products and cart -->
        <div class="row">
            <!-- Products -->
            <div class="col-sm-12 col-md-6 col-lg-8 product-container">
                <h3>Products: </h3>
                <% shop.products.forEach(function(product){ %>
                <div class="card" style="display:inline-block">
                    <div class="card-body">
                        <h5 class="card-title">
                            <%= product.name %>
                        </h5>
                        <p class="card-text">$
                            <%= product.price %>
                        </p>
                        <button class="btn btn-primary addProductToCartButton" id="<%= product._id %>"" >Add to cart</button>
                    </div>
                </div>
                <%});%>
            </div>

            <!-- Cart -->
            <div class="col-sm-12 col-md-6 col-lg-4 cart-container">
                <h3>Your Cart:</h3>
                <div id="cartItems"></div>
            </div>
        </div>
    </div>
</body>

</html>

<style>
    .cart-container {
        border: 2px solid black;
        border-radius: 10px;
        min-height: 50vh;
    }

    .product-container {
        border: 2px solid black;
        border-radius: 10px;
        min-height: 50vh;
    }
</style>

<script>

    $(document).ready(function(){

        var cart = {
            line_items: {}
        }


        var addProductToCart = function (product) {
            // edit data
            if (!cart.line_items.product) {
                cart.line_items.product = 1;
            }
            else {
                cart.line_items.product += 1;
            }
            // display on screen

        }

        // add product to cart




        // create a new product
        $("#createNewProductButton").on('click', function(){
            var name = document.getElementById('newProductName').value;
            var price = parseFloat(parseFloat(document.getElementById('newProductPrice').value).toFixed(2));
            var shopId = document.getElementById('newProductShop').value;
            var query = `
                mutation ProductObject($name: String!, $price: Float!, $shopId: String){
                    createProduct(name: $name, price: $price, shopId: $shopId){
                        _id
                    }
                }
            `;
            fetch('/graphql/product', {
                method: 'POST',
                headers: {
                    'Content-Type': 'application/json',
                    'Accept': 'application/json',
                },
                body: JSON.stringify({
                    query,
                    variables: { name, price, shopId }
                })
            })
            .then(r => r.json())
            .then((data) => {
                let product = data.data.createProduct;
                console.log(product);
                location.reload();
            });
        });



    });

</script>